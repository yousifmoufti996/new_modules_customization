<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_hide_partner_locations" model="ir.ui.view">
        <field name="name">stock.picking.form.hide.partner.locations</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_dest_id']" position="attributes">
                <attribute name="domain">[('usage', 'in', ['internal', 'view']), ('name', 'not ilike', 'Partners')]</attribute>
                <attribute name="context">{'hide_partner_locations': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>